# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts - Google Shell Style Guide
[*.sh]
indent_style = space
indent_size = 2

# Bats test files
[*.bats]
indent_style = space
indent_size = 4

# Makefile - must use tabs
[Makefile]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
